import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import SearchManager
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host:port] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  void register_article()'
  print '  void ksearch(string query_text, i32 page, i32 page_length)'
  print '  ArticleSearchResult search(string session_key, bool all_flag, string board_name, SearchQuery query_dict, i32 page, i32 page_length)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = SearchManager.Client(protocol)
transport.open()

if cmd == 'register_article':
  if len(args) != 0:
    print 'register_article requires 0 args'
    sys.exit(1)
  pp.pprint(client.register_article())

elif cmd == 'ksearch':
  if len(args) != 3:
    print 'ksearch requires 3 args'
    sys.exit(1)
  pp.pprint(client.ksearch(args[0],eval(args[1]),eval(args[2]),))

elif cmd == 'search':
  if len(args) != 6:
    print 'search requires 6 args'
    sys.exit(1)
  pp.pprint(client.search(args[0],eval(args[1]),args[2],eval(args[3]),eval(args[4]),eval(args[5]),))

transport.close()
