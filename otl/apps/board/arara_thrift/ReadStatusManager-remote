import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import ReadStatusManager
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host:port] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  string check_stat(string session_key, i32 no)'
  print '   check_stats(string session_key,  no_list)'
  print '  void mark_as_read_list(string session_key,  no_list)'
  print '  void mark_as_read(string session_key, i32 no)'
  print '  void mark_as_viewed(string session_key, i32 no)'
  print '  void save_to_database(string username)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':') 
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':') 
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = ReadStatusManager.Client(protocol)
transport.open()

if cmd == 'check_stat':
  if len(args) != 2:
    print 'check_stat requires 2 args'
    sys.exit(1)
  pp.pprint(client.check_stat(args[0],eval(args[1]),))

elif cmd == 'check_stats':
  if len(args) != 2:
    print 'check_stats requires 2 args'
    sys.exit(1)
  pp.pprint(client.check_stats(args[0],eval(args[1]),))

elif cmd == 'mark_as_read_list':
  if len(args) != 2:
    print 'mark_as_read_list requires 2 args'
    sys.exit(1)
  pp.pprint(client.mark_as_read_list(args[0],eval(args[1]),))

elif cmd == 'mark_as_read':
  if len(args) != 2:
    print 'mark_as_read requires 2 args'
    sys.exit(1)
  pp.pprint(client.mark_as_read(args[0],eval(args[1]),))

elif cmd == 'mark_as_viewed':
  if len(args) != 2:
    print 'mark_as_viewed requires 2 args'
    sys.exit(1)
  pp.pprint(client.mark_as_viewed(args[0],eval(args[1]),))

elif cmd == 'save_to_database':
  if len(args) != 1:
    print 'save_to_database requires 1 args'
    sys.exit(1)
  pp.pprint(client.save_to_database(args[0],))

transport.close()
